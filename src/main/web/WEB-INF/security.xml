<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
       http://www.springframework.org/schema/security
       http://www.springframework.org/schema/security/spring-security.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="springSecurityFilterChain" class="org.springframework.web.filter.DelegatingFilterProxy" />


    <security:global-method-security pre-post-annotations="enabled" />

    <bean id="userDetailsService" class="com.bsuir.petition.security.service.UserDetailsServiceImpl" />

    <!--<security:http pattern="/login" security="none" />-->
    <security:http pattern="/app/**" security="none" />

    <security:http auto-config="false" disable-url-rewriting="true"
                   create-session="stateless" entry-point-ref="restAuthenticationEntryPoint">
        <security:custom-filter ref="restAuthenticationFilter" position="FORM_LOGIN_FILTER"/>
        <security:access-denied-handler ref="accessDeniedHandler" />
        <security:csrf disabled="true" />
        <security:intercept-url pattern="/signup" access="hasRole('USER')" />
        <security:intercept-url pattern="/login" access="permitAll" />

        <!--<security:intercept-url pattern="/login/**" access="permitAll"/>-->
        <!--<security:intercept-url pattern="/signup/**" access="permitAll"/>-->
    </security:http>

    <bean id="accessDeniedHandler" class="com.bsuir.petition.security.AuthorizationError" />

    <bean id="tokenAuthenticationManager" class="com.bsuir.petition.security.TokenAuthenticationManager" />

    <bean id="restAuthenticationFilter" class="com.bsuir.petition.security.TokenAuthenticationFilter" >
        <property name="authenticationManager" ref="tokenAuthenticationManager" />
        <property name="authenticationSuccessHandler" ref="restAuthenticationSuccessesHandler" />
        <property name="authenticationFailureHandler" ref="restAuthenticationFailureHandler" />
    </bean>

    <bean id="restAuthenticationFailureHandler" class="com.bsuir.petition.security.RestAuthenticationFailure" />

    <bean id="restAuthenticationSuccessesHandler" class="com.bsuir.petition.security.RestAuthenticationSuccesses" />

    <bean id="restAuthenticationEntryPoint" class="com.bsuir.petition.security.RestAuthenticationEntryPoint" />

</beans>